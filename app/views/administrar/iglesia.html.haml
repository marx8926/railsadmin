%body
	.container
		.content
			.row
				.span9
					
					= field_set_tag do
						= form_tag( administrar_iglesia_path,{:method=>'post'}) do
							%h2 Iglesia
							%legend
							%div{:class=>'form-inline'}
								= label_tag :creacion, 'Creación', :class=>'control-label'
								= render 'layouts/fecha'
								= label_tag :telefono, 'Telefono', :class=>'control-label'
								= phone_field_tag :telefono, {}, :class => 'input-large'

							= render 'layouts/ubigeo'
							%div{:class=>'form-inline'}
								= label_tag :direccion,'Dirección', :class=>'control-label'	
								= text_field_tag :direccion,'' , :class=>'input-xxlarge'
							%div{:class=>'form-inline'}
								= label_tag :referencia,'Referencia', :class=>'control-label'
								= text_field_tag :referencia,'' , :class=>'input-xxlarge'

							
							%div{:class=>'control-group'}
								= label_tag :ubicacion, 'Ubicación', :class=>'control-label'
								= hidden_field_tag :latitud
								= hidden_field_tag :longitud
							= render 'layouts/mapa'

							= submit_tag 'Guardar', :class=>'btn'