%body
	.container-fuild
		.content
			.row-fluid
				.span12
					= render 'layouts/messages'
					%h2 Ganar
					%legend
					= form_tag( administrar_iglesia_path,{:method=>'post',:class=>'form-horizontal'}) do
						= field_set_tag do
							.row-fluid
								.span4								
									.control-group
										= label_tag :nombres, 'Nombres: ', :class=>'control-label'
										.controls
											= text_field_tag :nombres, '', :class => 'input'
								
								.span4
									.control-group
										= label_tag :apellidos, 'Apellidos: ', :class=>'control-label'
										.controls
											= text_field_tag :apellidos, '', :class => 'input'
								.span4
									.control-group
										= label_tag :edad, 'Edad: ', :class=>'control-label'
										.controls
											= number_field_tag :edad,'0',:class=>'input-medium', :min=>0, :max=>120
								
							.row-fluid
								.span4
									.control-group
										= label_tag :ecivil, 'Estado Civil',:class=>'control-label'
										.controls
											= select_tag :ecivil, "<option value='1'>Solter@</option><option value='2'>Casad@</option><option value='3'>Viud@</option><option value='4'>Divorciad@</option><option value='5'>Conviviente</option>".html_safe
								
								.span4
									.control-group
										= label_tag :sexo, 'Sexo', :class=>'control-label'
										.controls
											= select_tag :sexo, "<option value='M'>Masculino</option><option value='F'>Femenino</option>".html_safe
									
								.span4
									.control-group
										= label_tag :creacion, 'F. Nacimiento', :class=>'control-label'
										.controls
											= render 'layouts/fecha'
							.row-fluid
								.span4
									.control-group
										= label_tag :dni, 'DNI', :class=>'control-label'
										.controls
											= text_field_tag :dni,'',:class=>'input'

								.span4
									.control-group
										= label_tag :ocupacion, 'Ocupación', :class=>'control-label'
										.controls
											= text_field_tag :ocupacion, '', :class=>'input'
								.span4
									.control-group
										= label_tag :profesion, 'Profesión', :class=>'control-label'
										.controls
											= text_field_tag :profesion,'', :class=>'input-medium'


						= submit_tag 'Guardar', :class=>'btn'

= javascript_include_tag 'util/functiongen'
